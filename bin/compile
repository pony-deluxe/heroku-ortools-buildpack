#!/usr/bin/env bash
echo "-----> Installing OR Tools 7.6.7691"
# change to the the BUILD_DIR ($1)
cd $1

# download the binary (-O) silently (-s)
curl https://github.com/google/or-tools/releases/download/v7.6/or-tools_ubuntu-18.04_v7.6.7691.tar.gz -s -O -ssl3

# make a directory to untar (like unzip) the binary
mkdir -p vendor/or-tools

tar -C vendor/or-tools -xvf or-tools_ubuntu-18.04_v7.6.7691.tar.gz
